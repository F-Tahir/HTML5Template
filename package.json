{
  "name": "html5template",
  "version": "1.0.0",
  "description": "Template for starting web projects.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "rebuild": "run-s clean build",
    "build": "ncp src dist && npm run build:css && rimraf dist/scss && rimraf dist/js",

    "start": "run-p watch serve",
    "watch": "onchange \"src\" -- run-s build",
    "serve": "browser-sync dist -w",
    
    "compile:scss": "node-sass src/scss/main.scss dist/css/main.min.css --output-style compressed",
    "build:css": "run-s compile:scss"
  },
  "author": "Faizan Tahir",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.1.0",
    "browser-sync": "^2.24.6",
    "ncp": "^2.0.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.4.0"
  }
}

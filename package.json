{
  "name": "html5template",
  "version": "1.0.0",
  "description": "Template for starting web projects.",
  "main": "index.js",
  "scripts": {
    "build": "ncp src dist && rimraf dist/scss && rimraf dist/js",
    "watch": "watch \"npm run compile:scss\" src/scss --interval=1",
    "compile:scss": "node-sass src/scss/main.scss src/css/main.min.css --output-style compressed --source-map src/scss/map"
  },
  "author": "Faizan Tahir",
  "license": "ISC",
  "devDependencies": {
    "ncp": "^2.0.0",
    "node-sass": "^4.9.3",
    "watch": "^1.0.2"
  }
}
